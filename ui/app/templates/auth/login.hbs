<h2>Login</h2>

<form {{action 'submit' on='submit'}}>
  {{input value=email}}
  <label>Email</label>

  {{input value=password type='password'}}
  <label>Password</label>

  <button class="submit" {{action 'authenticate'}}>
    Submit
  </button>

  {{#if error}}
    <p class="error">
      {{error}}
    </p>
  {{/if}}
</form>