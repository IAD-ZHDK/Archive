<div class="pane pane--image" style={{backgroundImage}}></div>

<div class="pane">
  <div class="pane__wrapper">
    <h2 class="pane__title">{{model.title}}</h2>

    <p class="pane__subtitle">{{model.subtitle}}</p>

    <p class="pane__details">
      <div>
        {{#each model.tags as |tag|}}
          <span>{{link-to tag.name 'tag' tag.slug}}</span>
        {{/each}}
      </div>

      <div>
        <span>{{link-to model.year 'year' model.year}}</span>
      </div>

      <div>
        {{#each model.people as |person|}}
          <span>{{link-to person.name 'person' person.slug}}</span>
        {{/each}}
      </div>
    </p>
  </div>
</div>

<div class="pane">
  <div class="pane__wrapper">
    <p class="pane__abstract">
      {{model.abstract}}
    </p>
  </div>
</div>

<div class="pane">
  <div class="pane__wrapper">
    {{#each model.videos as |vid|}}
      <video class="pane__video" controls poster="{{vid.high-res}}">
        <source src="{{vid.mp4-source}}" type="video/mp4">
        <source src="{{vid.webm-source}}" type="video/webm">
        Your browser does not support the video tag.
      </video>
    {{/each}}
  </div>
</div>

<div class="pane">
  <div class="pane__wrapper">
    {{#each model.images as |image|}}
      <a href="{{image.download}}">
        <img src="{{image.low-res}}" alt="{{image.title}}"/>
      </a>
    {{/each}}
  </div>
</div>

<div class="pane">
  <div class="pane__wrapper">
    <h5>Documents</h5>
    <ul>
      {{#each model.documents as |document|}}
        <li><a href="{{document.download}}">{{document.title}}</a></li>
      {{/each}}
    </ul>

    <h5>Websites</h5>
    <ul>
      {{#each model.websites as |website|}}
        <li>{{website.title}}</li>
      {{/each}}
    </ul>

    <h5>Files</h5>
    <ul>
      {{#each model.files as |file|}}
        <li><a href="{{file.download}}">{{file.title}}</a></li>
      {{/each}}
    </ul>
  </div>
</div>
